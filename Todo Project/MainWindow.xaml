<Window x:Class="Todo_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="#FF202225">
        <ListBox DisplayMemberPath="Name" ItemsSource="{Binding Path=items}" SelectedItem="{Binding Path=SelectedItem}" MinHeight="100" MaxHeight="284" Foreground="White"></ListBox>
        <StackPanel Orientation="Horizontal">
            <Button ToolTip="Adds item to the listbox" Content="Add todo" Command="{Binding AddItemCommand}" CommandParameter="{Binding itemtext}" Height="51" Width="396" />
            <Button ToolTip="Removes item from the listbox" Content="Remove todo" Command="{Binding RemoveItemCommand}" CommandParameter="{Binding itemtext}" Height="51" Width="396"/>
        </StackPanel>
        <TextBox Text="{Binding Path=itemtext}" AcceptsReturn="False" Background="#FF76B9ED" Foreground="White" ToolTip="Type in your item here!" FontSize="20"/>
    </StackPanel>
</Window>
